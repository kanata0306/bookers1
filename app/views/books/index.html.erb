


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>  
        <td><span><%= book.body %></span></td>
        <td><span><%= link_to 'Show', book_path(book) %></span></td>
        <td><span><%= link_to 'Edit', edit_book_path(book) %></span></td>
        <td><span><%= link_to 'Destroy', book_path(book), method: :delete , "data-confirm" => "Are you sure?"%></span></td>
      </tr>  
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="error-message"><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with(model: @book, url: books_path) do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>






